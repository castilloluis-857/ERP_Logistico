<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox spacing="20" xmlns:fx="http://javafx.com/fxml" fx:controller="com.erp.logistica.principal.FacturaController" style="-fx-padding: 20;">
    <VBox spacing="10" prefWidth="300">
        <Label text="Paso 1: Seleccionar Cliente" style="-fx-font-weight: bold;"/>
        <ComboBox fx:id="cbClientes" maxWidth="Infinity" promptText="Elegir cliente..."/>

        <Separator/>

        <Label text="Paso 2: Añadir Producto" style="-fx-font-weight: bold;"/>
        <ComboBox fx:id="cbProductos" maxWidth="Infinity" promptText="Elegir producto..."/>

        <Label text="Paso 3: Elegir Cantidad" style="-fx-font-weight: bold;"/>
        <Spinner fx:id="spCantidad" editable="true" maxWidth="Infinity">
            <valueFactory>
                <SpinnerValueFactory.IntegerSpinnerValueFactory min="1" max="100" initialValue="1" />
            </valueFactory>
        </Spinner>

        <Button text="Añadir al Carrito" onAction="#añadirAlCarrito" maxWidth="Infinity"
                style="-fx-background-color: #f39c12; -fx-text-fill: white;"/>
    </VBox>

    <VBox spacing="10" HBox.hgrow="ALWAYS">
        <Label text="Resumen de Factura" style="-fx-font-weight: bold; -fx-font-size: 16;"/>
        <ListView fx:id="lvCarrito" VBox.vgrow="ALWAYS"/>
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <Label text="TOTAL:" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
            <Label fx:id="lblTotal" text="0.00 €" style="-fx-font-size: 18; -fx-text-fill: #e74c3c;"/>
        </HBox>
        <Button text="FINALIZAR Y COBRAR" onAction="#finalizarFactura" maxWidth="Infinity" prefHeight="40"
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold;"/>
    </VBox>
</HBox>